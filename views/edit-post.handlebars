<div class="card">
    <h2 class="card-header">Edit Post</h2>
    <form class="card-body" id="edit-post-form">
        <div>
            <label class="form-label fancy">Title:</label>
            <input class="form-input" type="text" name="post-title" value="{{posts.title}}"/>
        </div>
        <div>
            <label class="form-label fancy">Content:</label>
            <textarea class="form-textarea form-input" name="post-body" data-number="8">{{posts.content}}</textarea>
        </div>
        <button class="btn btn-primary" type="submit" id="edit-posts">EDIT</button>
        <input type="hidden" name="post-id" value="{{posts.id}}"/>
    </form>
    <div class="card-body">
        <button class="btn btn-primary" type="click" id="delete-btn" id="delete-posts">DELETE</button>
    </div> 
</div>
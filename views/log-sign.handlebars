<div class="container">
  <div class="row log-sign-container">
    <div class="card col-6 log-sign">
      <h2 class="card-header sign-log-header">Login Champion!</h2>
      <form class="card-body login-form">
        <div class="form-group">
          <label class="form-label">Username:</label>
          <input class="form-input" type="text" id="username-input-login" />
        </div>
        <div class="form-group">
          <label class="form-label">Password:</label>
          <input class="form-input" type="password" id="password-input-login" />
        </div>
        <div class="form-group">
          <label class="form-label"></label>
        </div>
        <div class="form-group btn-center">
          <button class="btn sign-log-btn" type="submit">LOGIN</button>
        </div>
      </form>
    </div>
    <div class="card col-6 log-sign">
      <h2 class="card-header sign-log-header">Join us Champion!</h2>
      <form class="card-body signup-form">
        <div class="form-group">
          <label class="form-label">Username:</label>
          <input class="form-input" type="text" id="username-input-signup" />
        </div>
        <div class="form-group">
          <label class="form-label">Email:</label>
          <input class="form-input" type="text" id="email-input-signup" />
        </div>
        <div class="form-group">
          <label class="form-label">Password:</label>
          <input
            class="form-input"
            type="password"
            id="password-input-signup"
          />
        </div>
        <div class="form-group btn-center">
          <button class="btn sign-log-btn" type="submit">JOIN</button>
        </div>
      </form>
    </div>
  </div>
</div>
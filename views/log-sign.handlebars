<div class="container">
  <div class="row log-sign-container">
    <div class="card col-6 log-sign">
      <h2 class="card-header sign-log-header">Login Champion!</h2>
      <form class="card-body login-form" method="post" action="/login">
        <div class="form-group">
          <label class="form-label">Username:</label>
          <input id="name-login" class="form-input" type="text" name="league_ign"/>
        </div>
        <div class="form-group">
          <label class="form-label">Password:</label>
          <input id="password-login" class="form-input" type="password" name="password"/>
        </div>
        <div class="form-group">
          <label class="form-label"></label>
        </div>
        <div class="form-group btn-center">
          <button class="btn sign-log-btn" type="submit" href="login-form" id="login-form">LOGIN</button>
        </div>
      </form>
    </div>
    <div class="card col-6 log-sign">
      <h2 class="card-header sign-log-header">Join us Champion!</h2>
      <form class="card-body signup-form" method="post" action="/register">
        <div class="form-group">

          <label class="form-label">Username:</label>
          <input id="name-signup" class="form-input" type="text" name="league_ign" />
        </div>
        <div class="form-group">
          <label class="form-label">Email:</label>
          <input id="email-signup" class="form-input" type="text" name="email" />
        </div>
        <div class="form-group">
          <label class="form-label">Password:</label>
          <input class="form-input" type="password" id="password-signup" name="password" />
        </div>
        <div class="form-group btn-center">
          <button class="btn sign-log-btn" type="submit" id="signup-form">JOIN</button>
        </div>
      </form>
    </div>
  </div>
</div>